---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  date: Date;
  description?: string;
}

const { title, date, description } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric'
}).format(date);
---

<Layout title={title} description={description}>
  <div class="max-w-page mx-auto py-8 px-6">
    <Header />
    <article class="post" itemscope itemtype="http://schema.org/BlogPosting">
      <header class="mb-8">
        <h1 class="font-header text-3xl font-bold mb-4" itemprop="name headline">{title}</h1>
        <p class="text-sm font-bold">
          <time datetime={date.toISOString()} itemprop="datePublished">{formattedDate}</time>
        </p>
      </header>
      <div class="post-content prose max-w-none" itemprop="articleBody">
        <slot />
      </div>
    </article>
    <Footer />
  </div>
</Layout>

<style is:global>
  .post-content img {
    display: block;
    margin: 0 auto;
  }
  
  .post-content h1,
  .post-content h2,
  .post-content h3,
  .post-content h4,
  .post-content h5,
  .post-content h6 {
    @apply font-header font-bold mb-4;
  }
  
  .post-content h1 { @apply text-3xl; }
  .post-content h2 { @apply text-[1.875rem]; }
  .post-content h3 { @apply text-[1.625rem]; }
  .post-content h4 { @apply text-[1.4375rem]; }
  .post-content h5 { @apply text-xl; }
  .post-content h6 { @apply text-lg; }
  
  .post-content p,
  .post-content ul,
  .post-content ol,
  .post-content blockquote,
  .post-content pre {
    @apply mb-4;
  }
  
  .post-content a {
    @apply text-brand no-underline hover:underline hover:text-stone-700;
  }
  
  .post-content ul,
  .post-content ol {
    @apply ml-8;
  }
  
  .post-content blockquote {
    @apply pl-4 text-lg italic text-stone-600 border-l-4 border-stone-400;
  }
  
  .post-content code {
    @apply px-1 py-0.5 text-[0.9375rem] border border-stone-400 rounded-sm bg-[rgba(238,238,255,1)];
  }
  
  .post-content pre {
    @apply p-3 overflow-x-auto text-[0.9375rem] border border-stone-400 rounded-sm bg-[rgba(238,238,255,1)];
  }
  
  .post-content pre code {
    @apply p-0 border-0;
  }
  
  .post-content hr {
    @apply border-0 border-t border-stone-200 my-8 mx-4;
  }
  
  .post-content small {
    @apply text-stone-500 inline-block text-xs leading-[1.3125rem];
  }
</style>
