---
import PageLayout from '../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
const sortedPosts = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
  }).format(date);
};
---

<PageLayout title="Blog">
  <div class="home">
    <h1 class="font-header text-3xl font-bold mb-4">Blog</h1>

    <ul class="m-0 p-0 list-none">
      {sortedPosts.map((post) => (
        <li class="mb-6">
          <span class="font-bold text-sm">{formatDate(post.data.date)}</span>
          <a 
            class="block font-header text-xl font-bold text-brand no-underline hover:underline hover:text-stone-700"
            href={`/blog/${post.slug}`}
          >
            {post.data.title}
          </a>
        </li>
      ))}
    </ul>

    <p class="mt-8">
      <a class="text-brand no-underline hover:underline hover:text-stone-700" href="/feed.xml">subscribe via RSS</a>
    </p>
  </div>
</PageLayout>
